<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>groupId</groupId>
        <artifactId>records</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>groupId</groupId>
    <artifactId>utility</artifactId>
    <version>1.0-SNAPSHOT</version>

    <dependencies>
        <!-- annotations from the Checker Framework: nullness, interning, locking, ... -->
        <dependency>
            <groupId>org.checkerframework</groupId>
            <artifactId>checker-qual</artifactId>
            <version>2.1.7</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.checkerframework</groupId>
            <artifactId>checker</artifactId>
            <version>2.1.7</version>
            <scope>provided</scope>
        </dependency>
        <!-- The annotated JDK to use (change to jdk7 if using Java 7) -->
        <dependency>
            <groupId>org.checkerframework</groupId>
            <artifactId>jdk8</artifactId>
            <version>2.1.7</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4</artifactId>
            <version>4.5.3</version>
        </dependency>

        <dependency>
            <groupId>org.controlsfx</groupId>
            <artifactId>controlsfx</artifactId>
            <version>8.40.12</version>
        </dependency>

        <dependency>
            <groupId>org.sosy-lab</groupId>
            <artifactId>java-smt</artifactId>
            <version>1.0.1</version>
        </dependency>

        <dependency>
            <groupId>me</groupId>
            <artifactId>valueann</artifactId>
            <version>0.1</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/valueann.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.bluej</groupId>
            <artifactId>threadchecker-tags</artifactId>
            <version>0.1</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/threadchecker.jar</systemPath>
        </dependency>
    </dependencies>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <annotatedJdk>${org.checkerframework:jdk8:jar}</annotatedJdk>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>properties</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <!-- Change source and target to 1.7 if using Java 7 -->
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                    <fork>true</fork>
                    <annotationProcessors>
                        <!-- Add all the checkers you want to enable here -->
                        <annotationProcessor>org.checkerframework.checker.nullness.NullnessChecker</annotationProcessor>
                        <!-- Disabled for speed: -->
                        <!-- <annotationProcessor>org.checkerframework.checker.i18n.I18nChecker</annotationProcessor> -->
                        <!-- Disabled for speed: -->
                        <!-- <annotationProcessor>org.checkerframework.checker.interning.InterningChecker</annotationProcessor> -->
                        <!-- Disabled for speed: -->
                        <!-- <annotationProcessor>annotation.ValueTypeChecker</annotationProcessor> -->
                        <!-- Disabled for speed: -->
                        <!-- <annotationProcessor>annotation.userindex.UserIndexChecker</annotationProcessor> -->
                    </annotationProcessors>
                    <compilerArgs>
                        <!-- location of the annotated JDK, which comes from a Maven dependency -->
                        <arg>-Xbootclasspath/p:${annotatedJdk}</arg>
                        <arg>-AprintErrorStack</arg>
                        <arg>-AskipDefs=records.grammar.|one.util.</arg>
                        <arg>-Astubs=/Users/neil/intellij/records/records/stubs</arg>
                        <arg>-Apropfiles=/Users/neil/intellij/records/records/app/src/main/resources/transformations_en.properties:/Users/neil/intellij/records/records/app/src/main/resources/expression_en.properties:/Users/neil/intellij/records/records/app/src/main/resources/function_en.properties</arg>
                        <arg>-Xplugin:threadchecker.TCPlugin</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>