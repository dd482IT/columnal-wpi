<?xml version="1.0"?>
<functionDocumentation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:noNamespaceSchemaLocation="funcdoc.xsd"
                       namespace="datetime">
    <function name="date">
        <argType>(Number{year}, Number{month}, Number{day})</argType>
        <returnType>Date</returnType>
        <description>
            <p>Creates a date from the given year, month and day.</p>
        </description>
        <equivalence display="false">
            <forany name="x">Date</forany>
            <lhs>@match @call @function to text(x) @case @newvar y ; "-" ; @newvar m ; "-" ; @newvar d @then @call @function date(@call @function from text(y), @call @function from text(m), @call @function from text(d)) @endmatch</lhs>
            <rhs>x</rhs>
        </equivalence>
        <example>
            <input>@call @function to text(@call @function date(1998{year}, 07{month}, 10{day}))</input>
            <output>"1998-07-10"</output>
        </example>
        <example>
            <inputArg>(2004{year}, 08{month}, 06{day})</inputArg>
            <output>@call @function from text("6 August 2004")</output>
        </example>
    </function>

    <function name="time">
        <argType>(Number{hour}, Number{min}, Number{s})</argType>
        <returnType>Time</returnType>
        <description>
            <p>Creates a time-of-day (or clock time) from the given hours, minutes and seconds.</p>
        </description>
        <equivalence display="false">
            <forany name="x">Time</forany>
            <lhs>@match @call @function to text(x) @case @newvar h ; ":" ; @newvar m ; ":" ; @newvar s @then @call @function time(@call @function from text(h), @call @function from text(m), @call @function from text(s)) @endmatch</lhs>
            <rhs>x</rhs>
        </equivalence>
        <example>
            <input>@call @function to text(@call @function time(13{hour}, 31{min}, 0{s}))</input>
            <output>"13:31:00"</output>
        </example>
    </function>
    
    <function name="time zoned">
        <argType>(Time, Text)</argType>
        <returnType>TimeZoned</returnType>
        <description>
            <p>Creates a time with zone from the given time, and zone.</p>
            <p>The zone must be an exact offset (in minutes, or hours/ minutes).  Named time zones or cities are not supported because their offset can vary throughout the year, which would require a date (see <link function="date time zoned"/>).</p>
        </description>
        <example>
            <input>@call @function to text(@call @function time zoned(@call @function time(11{hour}, 21{min}, 0{s}), "PST"))</input>
            <output>"11:21:00 PST"</output>
        </example>
        <example>
            <input>@call @function to text(@call @function time zoned(@call @function time(1{hour}, 5{min}, 27.450{s}), "Europe/London")</input>
            <output>"01:05:27.450 Europe/London"</output>
        </example>
    </function>
</functionDocumentation>