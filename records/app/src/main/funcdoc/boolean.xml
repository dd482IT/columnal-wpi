<?xml version="1.0"?>
<functionDocumentation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:noNamespaceSchemaLocation="funcdoc.xsd"
                       namespace="boolean">
    <function name="not">
        <argType>Boolean</argType>
        <returnType>Boolean</returnType>
        <description>
            <p>Returns the opposite Boolean (given true, returns false; given false, returns true)</p>
        </description>
        <example>
            <input>true</input>
            <output>false</output>
        </example>
        <example>
            <input>false</input>
            <output>true</output>
        </example>
    </function>
    <function name="xor">
        <argType>(Boolean, Boolean)</argType>
        <returnType>Boolean</returnType>
        <description>
            <p>Returns the exclusive-or of the two items: returns true if exactly one of the items is true, but false if both are true.</p>
        </description>
        <example>
            <input>(true, true)</input>
            <output>false</output>
        </example>
        <example>
            <input>(true, false)</input>
            <output>true</output>
        </example>
        <example>
            <input>(false, true)</input>
            <output>true</output>
        </example>
        <example>
            <input>(false, false)</input>
            <output>false</output>
        </example>
    </function>
</functionDocumentation>