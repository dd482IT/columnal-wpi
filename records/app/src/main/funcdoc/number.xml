<?xml version="1.0"?>
<functionDocumentation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:noNamespaceSchemaLocation="funcdoc.xsd"
                       namespace="number">
    <functionGroup id="rounding" title="Functions for rounding">
        <description>
            A set of functions for rounding.
        </description>
        <function name="round">
            <argType>Number{*}</argType>
            <returnType>Number{*}</returnType>
            <description>
                <p>Rounds the given number to the nearest whole number (integer).</p>
                <p>Numbers that end in .5 (which are halfway between two whole numbers) are rounded towards the nearest even number, sometimes known as <a href="https://en.wikipedia.org/wiki/Rounding#Round_half_to_even">banker's rounding</a>.</p>
            </description>
            <example>
                <input>0.333</input>
                <output>0</output>
            </example>
            <example>
                <input>2</input>
                <output>2</output>
            </example>
            <example>
                <input>0.5</input>
                <output>0</output>
            </example>
            <example>
                <input>1.5</input>
                <output>2</output>
            </example>
        </function>
    </functionGroup>
    <functionGroup id="sign" title="Functions for manipulating sign">
        <function name="abs">
            <argType>Number{*}</argType>
            <returnType>Number{*}</returnType>
            <description>
                <p>Makes a number positive by discarding the minus sign.</p>
            </description>
            <example>
                <input>-3.6</input>
                <output>3.6</output>
            </example>
            <example>
                <input>5</input>
                <output>5</output>
            </example>
            <example>
                <input>0</input>
                <output>0</output>
            </example>
        </function>
    </functionGroup>

    <functionGroup id="list" title="Functions for dealing with lists of numbers">
        <function name="average">
            <argType>[Number{*}]</argType>
            <returnType>Number{*}</returnType>
            <description>
                <p>Calculates the average of a list of numbers.</p>
            </description>
            <example>
                <input>[1, 1.5, 5]</input>
                <output>2.5</output>
            </example>
            <example>
                <input>[33.4]</input>
                <output>33.4</output>
            </example>
            <example>
                <input>[]</input>
                <output>error</output>
            </example>
        </function>
        <function name="sum">
            <argType>[Number{*}]</argType>
            <returnType>Number{*}</returnType>
            <description>
                <p>Calculates the sum (total) of a list of numbers.</p>
            </description>
            <example>
                <input>[1, 1.5, 5]</input>
                <output>7.5</output>
            </example>
            <example>
                <input>[33.4]</input>
                <output>33.4</output>
            </example>
            <example>
                <input>[]</input>
                <output>0</output>
            </example>
        </function>
    </functionGroup>
</functionDocumentation>