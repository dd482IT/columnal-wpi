            <lhs>@call @function all(x, (@call @function maximum(x) &gt;= ?))</lhs>
            <rhs>true</rhs>
        </equivalence>
        <equivalence display="false">
            <foranytype name="t"><typeConstraint>Comparable t</typeConstraint></foranytype>
