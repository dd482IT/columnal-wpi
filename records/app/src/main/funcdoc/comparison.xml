<?xml version="1.0" encoding="utf-8" ?>
<functionDocumentation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:noNamespaceSchemaLocation="funcdoc.xsd"
                       namespace="comparison">
    <functionGroup id="minmax" title="Min-Max">
        <description>Minimum and maximum functions.</description>
        <function name="minimum">
            <typeArg>t</typeArg>
            <typeConstraint>Comparable t</typeConstraint>
            <argType>[@typevar t]</argType>
            <returnType>@typevar t</returnType>
            <description>
                <p>Gets the lowest item in the list.</p>
            </description>
            <equivalence display="false">
                <foranyclass name="x">Comparable</foranyclass>
                <lhs>@call @function all(x, (@call @function minimum(x) &lt;= ?))</lhs>
                <rhs>true</rhs>
            </equivalence>
            <equivalence display="false">
                <foranyclass name="x">Comparable</foranyclass>
                <lhs>@call @function in list(@call @function minimum(x), x)</lhs>
                <rhs>true</rhs>
            </equivalence>
            <example>
                <input>[54, 7, 82]</input>
                <output>7</output>
            </example>
            <example>
                <input>["cat", "aardvark", "bear"]</input>
                <output>"aardvark"</output>
            </example>
            <example>
                <input>[]</input>
                <output>error</output>
            </example>
        </function>
        <function name="maximum">
            <typeArg>t</typeArg>
            <typeConstraint>Comparable t</typeConstraint>
            <argType>[@typevar t]</argType>
            <returnType>@typevar t</returnType>
            <description>
                <p>Gets the highest item in the list.</p>
            </description>
            <equivalence display="false">
                <foranyclass name="x">Comparable</foranyclass>
                <lhs>@call @function all(x, (@call @function maximum(x) &gt;= ?))</lhs>
                <rhs>true</rhs>
            </equivalence>
            <equivalence display="false">
                <foranyclass name="x">Comparable</foranyclass>
                <lhs>@call @function minimum(x) &lt; @call @function maximum(x)</lhs>
                <rhs>true</rhs>
            </equivalence>
            <equivalence display="false">
                <foranyclass name="x">Comparable</foranyclass>
                <lhs>@call @function in list(@call @function maximum(x), x)</lhs>
                <rhs>true</rhs>
            </equivalence>
            <example>
                <input>[54, 7, 82]</input>
                <output>82</output>
            </example>
            <example>
                <input>["zebra", "wolf", "vole"]</input>
                <output>"zebra"</output>
            </example>
            <example>
                <input>[]</input>
                <output>error</output>
            </example>
        </function>
    </functionGroup>
</functionDocumentation>