            <!-- XSLT processor for help and funcdoc files -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>transform</goal>
                            <goal>validate</goal>
                        </goals>
                        <phase>process-resources</phase>
                    </execution>
                </executions>
                <configuration>
                    <validationSets>
                        <validationSet>
                            <dir>src/main/help</dir>
                            <includes>*.xml</includes>
                            <systemId>src/main/help/help.xsd</systemId>
                        </validationSet>
                        <validationSet>
                            <xincludeAware>true</xincludeAware>
                            <dir>src/main/funcdoc</dir>
                            <includes>*.xml</includes>
                            <systemId>src/main/funcdoc/funcdoc.xsd</systemId>
                        </validationSet>
                    </validationSets>
                    
                    <transformationSets>
                        <transformationSet>
                            <dir>src/main/help</dir>
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <stylesheet>src/main/xslt/make-help.xsl</stylesheet>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.help</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        <transformationSet>
                            <dir>src/main/help</dir>
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <stylesheet>src/main/xslt/make-help-html.xsl</stylesheet>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.html</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        <transformationSet>
                            <dir>src/main/help</dir>
                            <stylesheet>src/main/xslt/make-help-indiv.xsl</stylesheet>
                            <!-- When generating multiple files, outputDir is not respected.
                                 So we must pass as a parameter instead -->
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <parameters>
                                <parameter>
                                    <name>myOutputDir</name>
                                    <value>${project.build.directory}/classes</value>
                                </parameter>
                            </parameters>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.helpindivdummy</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>


                        <transformationSet>
                            <xincludeAware>true</xincludeAware>
                            <dir>src/main/funcdoc</dir>
                            <includes>_all.xml</includes>
                            <otherDepends>boolean.xml</otherDepends>
                            <otherDepends>comparison.xml</otherDepends>
                            <otherDepends>conversion.xml</otherDepends>
                            <otherDepends>core.xml</otherDepends>
                            <otherDepends>datetime.xml</otherDepends>
                            <otherDepends>guides.xml</otherDepends>
                            <otherDepends>list.xml</otherDepends>
                            <otherDepends>listprocess.xml</otherDepends>
                            <otherDepends>literals.xml</otherDepends>
                            <otherDepends>lookup.xml</otherDepends>
                            <otherDepends>math.xml</otherDepends>
                            <otherDepends>number.xml</otherDepends>
                            <otherDepends>operators.xml</otherDepends>
                            <otherDepends>optional.xml</otherDepends>
                            <otherDepends>syntax.xml</otherDepends>
                            <otherDepends>text.xml</otherDepends>
                            <otherDepends>types.xml</otherDepends>
                            
                            <otherDepends>../xslt/funcdoc-shared.xsl</otherDepends>
                            <stylesheet>src/main/xslt/funcdoc-indiv-html.xsl</stylesheet>
                            <!-- When generating multiple files, outputDir is not respected.
                                 So we must pass as a parameter instead -->
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <parameters>
                                <parameter>
                                    <name>myOutputDir</name>
                                    <value>${project.build.directory}/classes</value>
                                </parameter>
                            </parameters>
                            <!-- Generate dummy file to help with up-to-date check -->
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.funcdocindivdummy</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>

                        <transformationSet>
                            <xincludeAware>true</xincludeAware>
                            <dir>src/main/funcdoc</dir>
                            <includes>*.xml</includes>
                            <otherDepends>../xslt/funcdoc-shared.xsl</otherDepends>
                            <stylesheet>src/main/xslt/funcdoc-joined-html.xsl</stylesheet>
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.html</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>

                        <transformationSet>
                            <xincludeAware>true</xincludeAware>
                            <dir>src/main/funcdoc</dir>
                            <includes>_all.xml</includes>
                            <otherDepends>boolean.xml</otherDepends>
                            <otherDepends>comparison.xml</otherDepends>
                            <otherDepends>conversion.xml</otherDepends>
                            <otherDepends>core.xml</otherDepends>
                            <otherDepends>datetime.xml</otherDepends>
                            <otherDepends>list.xml</otherDepends>
                            <otherDepends>listprocess.xml</otherDepends>
                            <otherDepends>literals.xml</otherDepends>
                            <otherDepends>lookup.xml</otherDepends>
                            <otherDepends>math.xml</otherDepends>
                            <otherDepends>number.xml</otherDepends>
                            <otherDepends>operators.xml</otherDepends>
                            <otherDepends>optional.xml</otherDepends>
                            <otherDepends>syntax.xml</otherDepends>
                            <otherDepends>text.xml</otherDepends>
                            <otherDepends>types.xml</otherDepends>
                            <stylesheet>src/main/xslt/funcdoc-types-and-mini.xsl</stylesheet>
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <!-- When generating multiple files, outputDir is not respected.
                                 So we must pass as a parameter instead -->
                            <parameters>
                                <parameter>
                                    <name>myOutputDir</name>
                                    <value>${project.build.directory}/classes</value>
                                </parameter>
                            </parameters>
                            <!-- Generate dummy file to help with up-to-date checl -->
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.functionminidummy</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>

                        <transformationSet>
                            <dir>src/main/funcdoc</dir>
                            <stylesheet>src/main/xslt/extract-tests.xsl</stylesheet>
                            <outputDir>${project.build.directory}/classes</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>.test</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        
                    </transformationSets>
                </configuration>
                <!-- For XSLT 2.0: -->
                <dependencies>
                    <dependency>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>Saxon-HE</artifactId>
                        <version>9.8.0-11</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>records.gui.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>create-logos</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <property file="../installers/tools_${os.name}.properties"/>
                                <exec dir="target/classes" executable="${imagemagick_bin}/magick" failonerror="true">
                                    <arg line="convert"/>
                                    <arg line="../../src/main/resources/logo.png"/>
                                    <!-- Sizes from https://docs.microsoft.com/en-us/windows/desktop/uxguide/vis-icons -->
                                    <arg line="( +clone -resize 256x256 -write logo-256.png +delete )"/>
                                    <arg line="( +clone -resize 64x64 -write logo-64.png +delete )"/>
                                    <arg line="( +clone -resize 48x48 -write logo-48.png +delete )"/>
                                    <arg line="( +clone -resize 32x32 -write logo-32.png +delete )"/>
                                    <arg line="( +clone -resize 24x24 -write logo-24.png +delete )"/>
                                    <arg line="-resize 16x16 logo-16.png"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>package_mac</id>
        <activation>
            <os>
                <family>mac</family>
            </os>
        </activation>
        <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>build-mac-app</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="../installers/tools_${os.name}.properties"/>
                                <property file="../installers/package.properties"/>
                                <property name="compile_classpath" refid="maven.compile.classpath"/>

                                <mkdir dir="../installers/mac_dmg/Columnal.iconset"/>

                                <exec dir="../installers/mac_dmg/Columnal.iconset" executable="${imagemagick_bin}/magick" failonerror="true">
                                    <arg line="convert"/>
                                    <arg line="../../../app/src/main/resources/logo.png"/>
                                    <!-- Sizes for Mac from https://stackoverflow.com/a/20703594 -->
                                    <arg line="( +clone -resize 1024x1024 -write icon_512x512@2x.png +delete )"/>
                                    <arg line="( +clone -resize 512x512 -write icon_512x512.png +delete )"/>
                                    <arg line="( +clone -resize 512x512 -write icon_256x256@2x.png +delete )"/>
                                    <arg line="( +clone -resize 256x256 -write icon_256x256.png +delete )"/>
                                    <arg line="( +clone -resize 256x256 -write icon_128x128@2x.png +delete )"/>
                                    <arg line="( +clone -resize 128x128 -write icon_128x128.png +delete )"/>
                                    <arg line="( +clone -resize 128x128 -write icon_64x64@2x.png +delete )"/>
                                    <arg line="( +clone -resize 64x64 -write icon_64x64.png +delete )"/>
                                    <arg line="( +clone -resize 64x64 -write icon_32x32@2x.png +delete )"/>
                                    <arg line="( +clone -resize 32x32 -write icon_32x32.png +delete )"/>
                                    <arg line="( +clone -resize 32x32 -write icon_16x16@2x.png +delete )"/>
                                    <arg line="-resize 16x16 icon_16x16.png"/>
                                </exec>
                                <exec command="iconutil -c icns Columnal.iconset" dir="../installers/mac_dmg" failonerror="true"/>

                                <java fork="true" classname="com.badlogicgames.packr.Packr" dir="../" failonerror="true">
                                    <classpath refid="maven.compile.classpath"/>
                                    <arg value="--platform"/><arg value="mac"/>
                                    <arg value="--jdk"/><arg value="${jdk_location}"/>
                                    <arg value="--executable"/><arg value="columnal"/>
                                    <arg value="--vmargs"/><arg value="Dcolumnal.version=${columnal.version}"/><arg value="Dcolumnal.production=true"/>
                                    <arg value="--classpath"/><arg value="app/target/app-1.0-SNAPSHOT-jar-with-dependencies.jar"/>
                                    <arg value="--mainclass"/><arg value="records.gui.Main"/>
                                    <arg value="--icon"/><arg value="installers/mac_dmg/Columnal.icns"/>
                                    <arg value="--output"/><arg value="installers/mac_dmg/Columnal.app"/>
                                </java>
                                
                                <exec executable="bash" dir="../installers/mac_dmg" failonerror="true">
                                    <arg value="sign-app.sh"/>
                                    <arg value="Columnal.app"/>
                                </exec>
                                
                                <delete file="../installers/mac_dmg/Columnal-${columnal.version}.dmg"/>
                                <!-- This needs appdmg, see https://github.com/LinusU/node-appdmg -->
                                <!-- brew install npm && npm install -g appdmg -->
                                <exec executable="appdmg" dir="../installers/mac_dmg" failonerror="true">
                                    <arg value="appdmg.json"/>
                                    <arg value="columnal-${columnal.version}.dmg"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        </build>
    </profile>
    <profile>
        <id>package_windows</id>
        <activation>
            <os>
                <family>windows</family>
            </os>
        </activation>
        <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>build-msi</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="../installers/tools_${os.name}.properties"/>
                                <property file="../installers/package.properties"/>
                                
                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="convert"/>
                                    <arg line="../../app/src/main/resources/logo.png"/>
                                    <arg line="-resize 256x256"/>
                                    <arg line="-define icon:auto-resize=256,48,32,24,16"/>
                                    <arg line="logo.ico"/>
                                </exec>

                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="convert ../../app/src/main/resources/columnal.png -background white -gravity east -resize 400x50 -splice 70x0 -extent 493x58 columnal-banner-left.png"/>
                                </exec>

                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="composite"/>
                                    <!-- From https://stackoverflow.com/questions/5466138/imagemagick-composite-resizes-image-before-composing -->
                                    <arg line="-resize '1x1&lt;'"/>
                                    <arg line="( ../../app/src/main/resources/logo.png -resize 58x58 )"/>
                                    <arg line="columnal-banner-left.png"/>
                                    <arg line="-gravity southeast"/>
                                    <arg line="installer-banner.bmp"/>
                                </exec>

                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="convert ../../app/src/main/resources/columnal.png -background white -gravity northwest -resize 140x50 -splice 10x50 -extent 493x312 columnal-background-top.png"/>
                                </exec>
                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="convert ../../app/src/main/resources/logo.png -background white -gravity east -resize 100x100 -extent 130x100 columnal-background-logo.png"/>
                                </exec>

                                <exec dir="../installers/windows_msi" executable="${imagemagick_bin}/magick.exe" failonerror="true">
                                    <arg line="composite"/>
                                    <!-- From https://stackoverflow.com/questions/5466138/imagemagick-composite-resizes-image-before-composing -->
                                    <arg line="-resize '1x1&lt;'"/>
                                    <arg line="columnal-background-logo.png"/>
                                    <arg line="columnal-background-top.png"/>
                                    <arg line="-gravity west"/>
                                    <arg line="installer-background.bmp"/>
                                </exec>
                                
                                <!-- Set version numbers: -->
                                <copy file="../installers/windows_msi/launch4j.xml" tofile="../installers/windows_msi/launch4j_versioned.xml" overwrite="true"/>
                                <copy file="../installers/windows_msi/main.wxs" tofile="../installers/windows_msi/main_versioned.wxs" overwrite="true"/>
                                
                                <replace dir="../installers/windows_msi" propertyFile="../installers/package.properties">
                                    <include name="*_versioned*"/>
                                    <replacefilter token="@COLUMNALVERSION@" property="columnal.version"/>
                                    <replacefilter token="@COLUMNALGUID@" property="columnal.guid"/>
                                </replace>
                                
                                <exec dir="../installers/windows_msi" executable="${launch4j_bin}/launch4jc.exe" failonerror="true">
                                    <arg line="launch4j_versioned.xml"/>
                                </exec>
                                
                                <exec dir="../installers/windows_msi" executable="${wix_bin}/candle.exe" failonerror="true">
                                    <arg line="-arch x64"/>
                                    <arg line="main_versioned.wxs"/>
                                </exec>

                                <copy todir="../installers/windows_msi/SourceDir/jre"  overwrite="true">
                                    <fileset dir="${jre_location}"/>
                                </copy>

                                <!-- The heat tool scans all the files in the JRE and generates
                                     a WiX file that has a list of all the files -->
                                <exec dir="../installers/windows_msi" executable="${wix_bin}/heat.exe" failonerror="true">
                                    <arg line="dir SourceDir -cg JREFiles -dr INSTALLDIR -ke -gg -srd -sfrag -template fragment -out jre-files.wxs"/>
                                </exec>
                                <exec dir="../installers/windows_msi" executable="${wix_bin}/candle.exe" failonerror="true">
                                    <arg line="-arch x64"/>
                                    <arg line="jre-files.wxs"/>
                                </exec>

                                <exec dir="../installers/windows_msi" executable="${wix_bin}/light.exe">
                                    <arg line="-ext WixUIExtension -ext WixUtilExtension main_versioned.wixobj jre-files.wixobj -o columnal-${columnal.version}.msi"/>
                                </exec>
                                

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <!-- Must be run manually using mvn antrun:run@publish-msi -->
                        <id>publish-msi</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="../installers/tools_${os.name}.properties"/>
                                <property file="../installers/package.properties"/>
                                
                                <exec dir="../installers/windows_msi" executable="${putty_bin}/pscp.exe" failonerror="true">
                                    <arg line="columnal-${columnal.version}.msi"/>
                                    <arg line="neil@columnal.xyz:/home/neil/columnal-live/download/columnal-${columnal.version}.msi"/>
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Must be run manually using mvn antrun:run@publish-version -->
                        <id>publish-version</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="../installers/tools_${os.name}.properties"/>
                                <property file="../installers/package.properties"/>
                                
                                <echo file="../installers/columnal.version" append="false" message="${columnal.version}${line.separator}${columnal.description}"/>
                                <exec dir="../installers" executable="${putty_bin}/pscp.exe" failonerror="true">
                                    <arg line="columnal.version"/>
                                    <arg line="neil@columnal.xyz:/home/neil/columnal-live/columnal.version"/>
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
        </plugins>
        </build>
    </profile>
    </profiles>
    
    
</project>
