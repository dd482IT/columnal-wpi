        <dependency>
            <groupId>org.bluej</groupId>
            <artifactId>threadchecker</artifactId>
            <version>0.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.fxexperience</groupId>
            <artifactId>scenic-view</artifactId>
            <version>8.7.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/scenicView.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>groupId</groupId>
            <artifactId>lex-editor</artifactId>
            <version>1.0-SNAPSHOT</version>
